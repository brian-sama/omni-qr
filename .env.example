# Shared
NODE_ENV=development
APP_BASE_URL=http://localhost:3000
API_BASE_URL=http://localhost:4000

# Auth
JWT_ACCESS_SECRET=replace-with-strong-secret
JWT_REFRESH_SECRET=replace-with-strong-secret
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=30d
PUBLIC_ACCESS_TOKEN_TTL=10m

# Database
POSTGRES_DB=scansuite
POSTGRES_USER=scansuite
POSTGRES_PASSWORD=scansuite
DATABASE_URL=postgresql://scansuite:scansuite@localhost:5432/scansuite

# Object Storage (S3-compatible: MinIO/Cloudflare R2/S3)
S3_ENDPOINT=http://localhost:9000
S3_REGION=us-east-1
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=scansuite-files
S3_FORCE_PATH_STYLE=true
MAX_FILE_SIZE_MB=20

# API Runtime
API_PORT=4000
CORS_ORIGIN=http://localhost:3000
LOG_LEVEL=info

# Web Runtime
NEXT_PUBLIC_API_URL=http://localhost:4000
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SOCKET_URL=http://localhost:4000

# Observability
SENTRY_DSN=
NEXT_PUBLIC_SENTRY_DSN=
