{
  "name": "scan-suite-enterprise",
  "private": true,
  "version": "1.0.0",
  "description": "Scan Suite enterprise monorepo",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently -n api,web -c cyan,magenta \"npm run dev --workspace @omniqr/api\" \"npm run dev --workspace @omniqr/web\"",
    "dev:api": "npm run dev --workspace @omniqr/api",
    "dev:web": "npm run dev --workspace @omniqr/web",
    "build": "npm run build --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "test:unit": "npm run test:unit --workspace @omniqr/api",
    "test:integration": "npm run test:integration --workspace @omniqr/api",
    "test:e2e": "npm run test:e2e --workspace @omniqr/web",
    "db:generate": "npm run db:generate --workspace @omniqr/api",
    "db:migrate": "npm run db:migrate --workspace @omniqr/api",
    "db:seed": "npm run db:seed --workspace @omniqr/api"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "typescript": "^5.8.2"
  },
  "engines": {
    "node": ">=22"
  }
}

